{% extends "::new_login.html.twig" %}

{% block title %}Flyeurope20{% endblock %}


{% block body %}
    <div class="login-wrap">
        <div class="login-box">
            <div class="login-title text-center">
                <img src="{{ asset('img/login-logo.png') }}" alt=""/>
            </div>
            <div class="login-errors"></div>

            <div class="login-form-wrap">
                <form>
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="text" class="form-control login-username-input" placeholder="&#xf003; Username or Email" style="font-family:Arial, FontAwesome">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="password" class="form-control login-password-input" placeholder="&#xf023; Password" style="font-family:FontAwesome">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="checkbox text-left">
                                <a href="#" class="login-forget-password">Forget Password?</a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="checkbox login-checkbox-remember text-right">
                                <label>
                                    <input type="checkbox" value="">
                                    Remember me
                                </label>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-login-from">Log In</button>
                        </div>
                        <div class="col-md-12 text-center line-on-separator">
                           <span> OR </span>
                        </div>
                        <div class="col-md-12 text-center">
                            <a href="#" class="btn btn-register-from">Register</a>
                        </div>
                        <div class="clearfix"></div>

                        <div class="col-md-6 text-center social-btn">
                            <a href="#" class="btn btn-login-facebook">Sign In <i class="fa fa-facebook-f"></i></a>
                        </div>
                        <div class="col-md-6 text-center social-btn">
                            <a href="#" class="btn btn-login-twitter">Sign In <i class="fa fa-twitter"></i></a>
                        </div>
                        <div class="clearfix"></div>
                </form>
            </div>

        </div>
    </div>
        <ul class="about-hrefs">
            <li><a href="">Who We Are</a></li>
            <li><a href="">Privacy Policy</a></li>
            <li><a href="">Sales Condition</a></li>
        </ul>
        <div class="clearfix"></div>
{% endblock %}

{% block javascripts %}


{% endblock %}
