{% trans_default_domain 'FOSUserBundle' %}

{% if userHasInvite %}
<div class="col-md-12 mt10 notice-invitation">
    <div class="alert alert-warning">
        <i class="fa fa-info-circle"></i> User {{ group.owner }} invites you to join this group  <a class="btn btn-xs btn-success invite-action" data-group="{{ group.id }}" data-user="{{ app.user.id }}"><i class="fa fa-check-circle" ></i> Join to Group</a> <a class="btn btn-xs bgm-brown decline-invite-action" data-group="{{ group.id }}" data-user="{{ app.user.id }}"><i class="fa fa-remove"></i> Decline</a>
    </div>
</div>
{% endif %}

<div class=" mt10">

    <div class="col-md-12 mt10">
    <!-- Nav tabs -->
    <ul class="tab-nav" role="tablist">
        <li role="presentation" class="active"><a href="#feed" aria-controls="feed" role="tab" data-toggle="tab">News Feed</a></li>
        <li role="presentation"><a href="#calendar" aria-controls="suggestions" role="tab" data-toggle="tab">Common Calendar</a></li>
        <li role="presentation"><a href="#todo" aria-controls="calendar" role="tab" data-toggle="tab">ToDo List</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="feed">
            <div class="feed-block">
                <div class="mind-feeds">
                    {{ form_start(formFeed) }}
                    <div class="col-md-12">
                        <div class="feed-minds-row">
                                <img src="{{ app.user.getUserProfileImage }}" class="img-responsive pull-left" width="60">
                                {{ form_widget(formFeed.description,{'attr':{'placeholder':'What\'s on your mind?'}}) }}
                            <div class="clearfix"></div>
                        </div>
                        </div>
                    <div class="col-md-12 mt20 text-right">
                            <ul class="feed-minds-actions pull-right">
                                <li>{{ form_widget(formFeed.feedCategory ) }}</li>
                                <li><a id="image-holder" class="btn btn-default"><i class="md md-photo-camera"></i> Photo</a></li>
                                <li><a id="post-feed" class="btn btn-info"><i class="md md-done"></i> Post</a></li>
                            </ul>
                    </div>
                    <div class="clearfix"></div>
                    <div id="feed-urls-block">

                    </div>
                    <div class="clearfix"></div>
                    {{ form_end(formFeed) }}
                </div>
                {#<div class="refresh-feeds">#}
                        {#<button  class="btn btn-default btn-icon refreshFeeds" data-refresh="1" title="Refresh feeds"> <i class="md md-sync"></i></button>#}
                {#</div>#}
                <div class="timeline" id="feeds-holder">
                </div>
                <div class="text-center">
                    <a href=""  class="btn btn-default bgm-red btn-icon-text  refreshFeeds" > <i class="md md-sync"></i> Show older feeds</a>
                </div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="calendar">...</div>
        <div role="tabpanel" class="tab-pane" id="todo">
            <div id="todo-lists">
                <div class="tl-header">
                    <h2>Todo Lists</h2>
                    <small>Add, edit and manage your Todo Lists</small>
                </div>

                <div class="clearfix"></div>

                <div class="tl-body goals-list">
                    {% if group.goal|length %}
                        {% for goal in group.goal %}
                            <div class="checkbox media">
                                <div class="media-body">
                                    <label onclick="return false;">
                                        {%  if goal.checked or goal.goalDate|date('U') < 'now'|date('U') %}
                                            <i class="md md-done"></i>
                                        {% else %}
                                            <i class="md-check-box-outline-blank"></i>
                                        {% endif %}
                                        <span>{{ goal.title }}</span>
                                    </label>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="nogoals">
                            <i class="md  md-info-outline"></i> No Goals for this Group.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
        </div>
    {#<div class="col-md-5 mt10">#}
        {##}
    {#</div>#}
    <div class="clearfix"></div>
</div>

